# Warehouse Capacity Planner - Production Environment Variables
# Copy this file to .env and fill in your production values
# IMPORTANT: Never commit .env to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL username (create a dedicated user for production)
POSTGRES_USER=warehouse_prod_user

# PostgreSQL password (MUST be changed to a strong password)
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# PostgreSQL database name
POSTGRES_DB=warehouse_planner_prod

# Full database URL (auto-generated from above, or override)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Flask secret key (MUST be changed for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME_GENERATE_WITH_SECRETS_TOKEN_HEX_32

# Flask environment (must be 'production' for production deployments)
FLASK_ENV=production

# Allowed CORS origins (comma-separated, NO trailing slashes)
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com

# Maximum file upload size in bytes (default: 10MB)
MAX_UPLOAD_SIZE=10485760

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API URL for frontend requests
# Use relative path for same-domain deployments (recommended)
VITE_API_URL=/api/v1

# Or use absolute URL for different domains
# VITE_API_URL=https://api.yourdomain.com/api/v1

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Sentry DSN for error tracking (optional but recommended)
# Get yours at: https://sentry.io
# SENTRY_DSN=https://your-key@o0.ingest.sentry.io/your-project-id

# Redis URL for caching (optional, for improved performance)
# REDIS_URL=redis://redis:6379/0

# Custom upload folder path (optional, default: /tmp/uploads)
# UPLOAD_FOLDER=/app/uploads

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. Generate strong, unique passwords and secrets
# 2. Never use development/default values in production
# 3. Keep this file secure with proper permissions: chmod 600 .env
# 4. Never commit .env to version control (add to .gitignore)
# 5. Rotate secrets periodically as part of security best practices
# 6. Use environment-specific .env files for different deployments
